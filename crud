import pandas as pd

# Đọc dữ liệu từ file CSV
def load_data(file_path):
    return pd.read_csv(file_path)

# Thêm một mục mới vào dữ liệu
def create_entry(data, new_entry):
    new_row = pd.DataFrame([new_entry])
    data = pd.concat([data, new_row], ignore_index=True)
    return data

# Đọc dữ liệu (tất cả hoặc theo điều kiện)
def read_data(data):
    return data

# Cập nhật dữ liệu theo điều kiện (ví dụ: dựa trên ID)
def update_entry(data, index, updated_entry):
    data.loc[index] = updated_entry
    return data

# Xóa dữ liệu theo điều kiện (ví dụ: dựa trên ID)
def delete_entry(data, index):
    data = data.drop(index)
    return data
